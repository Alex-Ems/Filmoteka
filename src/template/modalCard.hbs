<div class="modal__info">
    <img src="{{poster_path}}" alt="poster" class="modal__poster-img">
    <div class="modal__text-box">
        <h1 class="modal__top-text">{{original_title}}</h1>
        <table class="modal__table">
            <tr class="modal__table-item">
                <th class="modal__table-top">Vote / Votes</th>
                <th class="modal__table-text"><span class="vote">{{vote_average}}</span>/{{vote_count}}</th>
            </tr>
            <tr class="modal__table-item">
                <th class="modal__table-top">Popularity</th>
                <th class="modal__table-text">{{popularity}}</th>
            </tr>
            <tr class="modal__table-item">
                <th class="modal__table-top">Original Title</th>
                <th class="modal__table-text">{{original_title}}</th>
            </tr>
            <tr class="modal__table-item">
                <th class="modal__table-top">Genre</th>
                <th class="modal__table-text">{{...genre_ids}}</th>
            </tr>
        </table>
        <p class="modal__text modal__text--header">About</p>
        <p class="modal__text">{{overview}}</p>
        <ul class="modal__btn-list">
            <li class="modal__btn-item"><button class="modal__choice-btn">add to Watched</button></li>
            <li class="modal__btn-item"><button class="modal__choice-btn">add to queue</button></li>
        </ul>
    </div>
</div>